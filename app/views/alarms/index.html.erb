<h1>Listing alarms</h1>

<table>
  <thead>
    <tr>
      <th>Temp max</th>
      <th>Temp min</th>
      <th>Trigger time</th>
      <th>Thermostat</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @alarms.each do |alarm| %>
      <tr>
        <td><%= alarm.temp_max %></td>
        <td><%= alarm.temp_min %></td>
        <td><%= alarm.trigger_time %></td>
        <td><%= alarm.thermostat %></td>
        <td><%= link_to 'Show', alarm %></td>
        <td><%= link_to 'Edit', edit_alarm_path(alarm) %></td>
        <td><%= link_to 'Destroy', alarm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

