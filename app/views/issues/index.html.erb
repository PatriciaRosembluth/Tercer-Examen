<h1>Listing issues</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Thermostat</th>
      <th>Description</th>
      <th>Status</th>
      <th>Resolution</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <%if issue.status != 'CANCELADO'  %>
        <td><%= issue.thermostat.serial %></td>
        <td><%= issue.description %></td>
        <td><%= issue.status %></td>
        <td><%= issue.resolution %></td>
        <%if issue.status != 'RESUELTO'  %>
        <td><%= link_to 'Resolver', edit_issue_path(issue) %></td>
        <%end%>
        <%if issue.status == 'RESUELTO'  %>
        <td><%= link_to 'Abrir', open_issue_path(issue) %></td>
        <%end%>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

