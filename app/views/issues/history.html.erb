<h1>Lista de problemas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Termostato</th>
      <th>Descripcion del problema</th>
      <th>Estado</th>
      <th>Resolucion</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.thermostat.serial %></td>
        <td><%= issue.description %></td>
        <td><%= issue.status %></td>
        <td><%= issue.resolution %></td>
        <td><%= link_to 'Cancelar', change_status_issue_path(issue), :class => 'btn btn-mini'   %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>